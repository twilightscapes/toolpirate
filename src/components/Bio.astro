---
import { getEntry } from 'astro:content';
const bioContent = await getEntry('bio', 'index');
---

<section id="profile" class="scroll-area1 panel w-screen  mb-5 overflow-hidden rounded-lg backdrop-blur-lg">
    <article>
      <div id="profiletop" class="flex flex-col md:flex-row justify-center items-center gap-4 p-4">
        <div class="nameblock flex-1 text-center">
          <h1 class="title2 text-[clamp(1.6rem,3.9vw,4rem)] mb-2">{bioContent.data.title}</h1>

          <h2 class="tagline1 text-[clamp(1.2rem,2vw,3rem)] text-center mb-4">{bioContent.data.tagline}</h2>

          <div class="description text-lg md:text-xl lg:text-2xl px-4 text-left ">
            <p>{bioContent.data.description}</p>
          </div>
        </div>

        
        <div class="flex-1 min-w-[300px] md:min-w-[500px]">
          <h2 class="title2 text-center text-[clamp(1.2rem,3vw,2rem)] mb-6">
            <a href={`tel:${bioContent.data.phone}`} class="hover:underline">Call {bioContent.data.phone}</a>
          </h2>
          <h3 class="font text-center text-xl md:text-2xl lg:text-3xl mb-4">{bioContent.data.subheading}</h3>
          <div class="bg-accent backdrop-blur-md mt-4  rounded-lg text-center text-lg md:text-xl lg:text-2xl mx-auto">
            <p>{bioContent.data.subcontent}</p>
            <button class="special font mt-4">
              <div class="fancy"></div>
              <a href="contact" class="font no-underline border-none shadow-none">
                <span class="butttext font">{bioContent.data.subcta}</span>
              </a>
            </button>
          </div>
        </div>
      </div>
    </article>
</section>